@using Microsoft.AspNetCore.Components.Authorization

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            <i class="bi bi-building"></i> QIMy
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Главная
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>
                <!-- AR Module: Sales (Ausgangsrechnungen) -->
                <div class="nav-item px-3 mt-3">
                    <div class="text-muted small px-3">
                        <strong>АР - СЧЕТА (ИСХОДЯЩИЕ)</strong>
                    </div>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="ar/clients">
                        <span class="bi bi-people-fill" aria-hidden="true"></span> Клиенты
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="ar/invoices">
                        <span class="bi bi-file-text-fill" aria-hidden="true"></span> Счета
                    </NavLink>
                </div>

                <!-- AG Module: Quotes (Angebote) -->
                <div class="nav-item px-3 mt-3">
                    <div class="text-muted small px-3">
                        <strong>АГ - ПРЕДЛОЖЕНИЯ</strong>
                    </div>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="ag/quotes">
                        <span class="bi bi-file-earmark-text" aria-hidden="true"></span> Предложения
                    </NavLink>
                </div>

                <!-- ER Module: Purchase Invoices (Eingangsrechnungen) - Coming Soon -->
                <div class="nav-item px-3 mt-3">
                    <div class="text-muted small px-3">
                        <strong>ЭР - СЧЕТА (ВХОДЯЩИЕ)</strong>
                    </div>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="er/suppliers" disabled>
                        <span class="bi bi-truck" aria-hidden="true"></span> Поставщики
                        <span class="badge bg-secondary ms-2">Скоро</span>
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="er/purchase-invoices" disabled>
                        <span class="bi bi-receipt" aria-hidden="true"></span> Входящие счета
                        <span class="badge bg-secondary ms-2">Скоро</span>
                    </NavLink>
                </div>

                <!-- KA Module: Cash Register - Coming Soon -->
                <div class="nav-item px-3 mt-3">
                    <div class="text-muted small px-3">
                        <strong>КА - КАССА</strong>
                    </div>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="ka/cash-register" disabled>
                        <span class="bi bi-cash-coin" aria-hidden="true"></span> Реестр касс
                        <span class="badge bg-secondary ms-2">Скоро</span>
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="ka/cash-book" disabled>
                        <span class="bi bi-journal-text" aria-hidden="true"></span> Кассовая книга
                        <span class="badge bg-secondary ms-2">Скоро</span>
                    </NavLink>
                </div>

                <!-- Admin Section -->
                <div class="nav-item px-3 mt-3">
                    <div class="text-muted small px-3">
                        <strong>АДМИН - СПРАВОЧНИКИ</strong>
                    </div>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/reference-data">
                        <span class="bi bi-table" aria-hidden="true"></span> Все справочники
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/tax-rates">
                        <span class="bi bi-percent" aria-hidden="true"></span> Налоговые ставки
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/accounts">
                        <span class="bi bi-calculator" aria-hidden="true"></span> Счета
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/currencies">
                        <span class="bi bi-currency-exchange" aria-hidden="true"></span> Валюты
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/products">
                        <span class="bi bi-box-seam" aria-hidden="true"></span> Товары
                    </NavLink>
                </div>

                <hr class="my-2" />

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Logout">
                        <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Выйти
                    </NavLink>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Login">
                        <span class="bi bi-box-arrow-in-right" aria-hidden="true"></span> Войти
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>
