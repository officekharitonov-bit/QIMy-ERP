@page "/er/suppliers/create"
@using QIMy.Application.Suppliers.Commands.CreateSupplier
@using QIMy.Application.Suppliers.DTOs
@using MediatR
@using QIMy.Web.Services
@inject IMediator Mediator
@inject NavigationManager Navigation
@inject BusinessContext BusinessCtx
@rendermode InteractiveServer

<PageTitle>Новый поставщик</PageTitle>

<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3><i class="bi bi-truck"></i> Новый поставщик</h3>
                <a href="/er/suppliers" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Назад
                </a>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle"></i> @errorMessage
                </div>
            }

            <EditForm Model="@command" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />
                
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Основная информация</h5>
                        
                        <div class="mb-3">
                            <label class="form-label">Название компании *</label>
                            <InputText class="form-control" @bind-Value="command.CompanyName" />
                            <ValidationMessage For="@(() => command.CompanyName)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Контактное лицо</label>
                            <InputText class="form-control" @bind-Value="command.ContactPerson" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Email</label>
                                <InputText type="email" class="form-control" @bind-Value="command.Email" />
                                <ValidationMessage For="@(() => command.Email)" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Телефон</label>
                                <InputText class="form-control" @bind-Value="command.Phone" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">VAT Number</label>
                            <InputText class="form-control" @bind-Value="command.VatNumber" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Tax Number</label>
                            <InputText class="form-control" @bind-Value="command.TaxNumber" />
                        </div>

                        <hr />
                        <h5 class="card-title">Адрес</h5>

                        <div class="mb-3">
                            <label class="form-label">Адрес</label>
                            <InputText class="form-control" @bind-Value="command.Address" />
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Почтовый индекс</label>
                                <InputText class="form-control" @bind-Value="command.PostalCode" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Город</label>
                                <InputText class="form-control" @bind-Value="command.City" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Страна</label>
                                <InputText class="form-control" @bind-Value="command.Country" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Банковский счет (IBAN)</label>
                            <InputText class="form-control" @bind-Value="command.BankAccount" />
                        </div>
                    </div>
                </div>

                <div class="mt-3 d-flex gap-2">
                    <button type="submit" class="btn btn-primary" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        <i class="bi bi-check-lg"></i> Создать
                    </button>
                    <a href="/er/suppliers" class="btn btn-secondary">Отмена</a>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private CreateSupplierCommand command = new();
    private bool isSaving = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await BusinessCtx.InitializeAsync();
        if (BusinessCtx.CurrentBusinessId.HasValue)
        {
            command.BusinessId = BusinessCtx.CurrentBusinessId.Value;
        }
    }

    private async Task HandleSubmit()
    {
        isSaving = true;
        errorMessage = null;

        try
        {
            var result = await Mediator.Send(command);

            if (result.IsSuccess)
            {
                Navigation.NavigateTo("/er/suppliers");
            }
            else
            {
                errorMessage = result.Error;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Ошибка: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }
}
