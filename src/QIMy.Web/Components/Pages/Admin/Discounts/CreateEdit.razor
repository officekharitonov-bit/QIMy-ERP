@page "/admin/discounts/edit/{Id:int}"
@using QIMy.Infrastructure.Data
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext DbContext
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>@(Id == 0 ? "Новая скидка" : "Редактирование скидки")</PageTitle>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">@(Id == 0 ? "Новая скидка" : "Редактирование скидки")</h3>
                </div>
                <div class="card-body">
                    <EditForm Model="@discount" OnValidSubmit="@HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger" />

                        <div class="mb-3">
                            <label class="form-label">Название *</label>
                            <InputText @bind-Value="discount.Name" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Процент скидки *</label>
                            <InputNumber @bind-Value="discount.Percentage" class="form-control" step="0.01" />
                            <div class="form-text">Укажите процент скидки (например, 10 для 10%)</div>
                        </div>

                        <div class="mb-3 form-check">
                            <InputCheckbox @bind-Value="discount.IsDefault" class="form-check-input" id="isDefault" />
                            <label class="form-check-label" for="isDefault">
                                Использовать по умолчанию
                            </label>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-secondary" @onclick="Cancel">
                                <i class="bi bi-x-circle"></i> Отмена
                            </button>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Сохранить
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private Discount discount = new();

    protected override async Task OnInitializedAsync()
    {
        if (Id > 0)
        {
            var existingDiscount = await DbContext.Discounts.FindAsync(Id);
            if (existingDiscount != null)
            {
                discount = existingDiscount;
            }
        }
    }

    private async Task HandleValidSubmit()
    {
        if (discount.IsDefault)
        {
            // Remove IsDefault from all other discounts
            var otherDiscounts = await DbContext.Discounts
            .Where(d => d.Id != discount.Id && !d.IsDeleted)
            .ToListAsync();

            foreach (var other in otherDiscounts)
            {
                other.IsDefault = false;
                other.UpdatedAt = DateTime.UtcNow;
            }
        }

        if (Id == 0)
        {
            discount.CreatedAt = DateTime.UtcNow;
            discount.UpdatedAt = DateTime.UtcNow;
            DbContext.Discounts.Add(discount);
        }
        else
        {
            discount.UpdatedAt = DateTime.UtcNow;
            DbContext.Discounts.Update(discount);
        }

        await DbContext.SaveChangesAsync();
        Navigation.NavigateTo("/admin/discounts");
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/admin/discounts");
    }
}
