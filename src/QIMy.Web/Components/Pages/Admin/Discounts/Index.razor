@page "/admin/discounts"
@using QIMy.Infrastructure.Data
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext DbContext
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Скидки</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Скидки</h2>
        <div>
            @if (selectedIds.Any())
            {
                <button class="btn btn-danger me-2" @onclick="DeleteSelected">
                    <i class="bi bi-trash"></i> Удалить выбранные (@selectedIds.Count)
                </button>
            }
            <a href="/admin/discounts/edit/0" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Добавить скидку
            </a>
            <a href="/admin/reference-data" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Назад
            </a>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Загрузка...</span>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th style="width: 50px;">
                                    <input type="checkbox" class="form-check-input" @onchange="ToggleSelectAll"
                                        checked="@(selectedIds.Any() && selectedIds.Count == discounts.Count)" />
                                </th>
                                <th>Название</th>
                                <th>Процент</th>
                                <th>По умолчанию</th>
                                <th style="width: 150px;">Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var discount in discounts)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" class="form-check-input"
                                            checked="@selectedIds.Contains(discount.Id)"
                                            @onchange="() => ToggleSelect(discount.Id)" />
                                    </td>
                                    <td>@discount.Name</td>
                                    <td>@discount.Percentage.ToString("0.##")%</td>
                                    <td>
                                        @if (discount.IsDefault)
                                        {
                                            <span class="badge bg-success">Да</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="/admin/discounts/edit/@discount.Id" class="btn btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button class="btn btn-outline-danger" @onclick="() => DeleteDiscount(discount.Id)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<Discount> discounts = new();
    private bool isLoading = true;
    private HashSet<int> selectedIds = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        selectedIds.Clear();
        discounts = await DbContext.Discounts
        .Where(d => !d.IsDeleted)
        .OrderByDescending(d => d.IsDefault)
        .ThenBy(d => d.Name)
        .ToListAsync();
        isLoading = false;
    }

    private void ToggleSelect(int id)
    {
        if (selectedIds.Contains(id))
            selectedIds.Remove(id);
        else
            selectedIds.Add(id);
    }

    private void ToggleSelectAll(ChangeEventArgs e)
    {
        if ((bool?)e.Value == true)
            selectedIds = discounts.Select(d => d.Id).ToHashSet();
        else
            selectedIds.Clear();
    }

    private async Task DeleteSelected()
    {
        if (!selectedIds.Any()) return;

        int deleted = 0;
        foreach (var id in selectedIds.ToList())
        {
            var discount = await DbContext.Discounts.FindAsync(id);
            if (discount != null)
            {
                discount.IsDeleted = true;
                discount.UpdatedAt = DateTime.UtcNow;
                deleted++;
            }
        }
        if (deleted > 0)
        {
            await DbContext.SaveChangesAsync();
            await LoadData();
        }
    }

    private async Task DeleteDiscount(int id)
    {
        var discount = await DbContext.Discounts.FindAsync(id);
        if (discount != null)
        {
            discount.IsDeleted = true;
            discount.UpdatedAt = DateTime.UtcNow;
            await DbContext.SaveChangesAsync();
            await LoadData();
        }
    }
}
