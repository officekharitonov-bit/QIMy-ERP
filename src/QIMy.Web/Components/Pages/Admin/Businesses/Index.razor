@page "/admin/businesses"
@using MediatR
@using Microsoft.EntityFrameworkCore
@using Microsoft.JSInterop
@using QIMy.Application.Businesses.Commands.DeleteBusiness
@using QIMy.Application.Businesses.DTOs
@using QIMy.Application.Businesses.Queries.GetAllBusinesses
@using QIMy.Core.Entities
@using QIMy.Infrastructure.Data
@using QIMy.Infrastructure.Services
@inject IMediator Mediator
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation
@inject BusinessTemplateService TemplateService
@inject IDbContextFactory<ApplicationDbContext> ContextFactory
@rendermode InteractiveServer

<PageTitle>Бизнесы</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Бизнесы</h2>
        <div>
            @if (selectedIds.Any())
            {
                <button class="btn btn-danger me-2" @onclick="DeleteSelected">
                    <i class="bi bi-trash"></i> Удалить выбранные (@selectedIds.Count)
                </button>
            }
            <a href="/admin/businesses/edit/0" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Добавить бизнес
            </a>
            <a href="/admin/reference-data" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Назад
            </a>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Загрузка...</span>
            </div>
        </div>
    }
    else
    {
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @errorMessage
                <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
            </div>
        }

        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @successMessage
                <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
            </div>
        }

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th style="width: 50px;">
                                    <input type="checkbox" class="form-check-input" @onchange="ToggleSelectAll"
                                        checked="@(selectedIds.Any() && selectedIds.Count == businesses.Count)" />
                                </th>
                                <th>Название</th>
                                <th>Юридическое название</th>
                                <th>ИНН</th>
                                <th>НДС номер</th>
                                <th>Город</th>
                                <th>Email</th>
                                <th style="width: 200px;">Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var business in businesses)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" class="form-check-input"
                                            checked="@selectedIds.Contains(business.Id)"
                                            @onchange="() => ToggleSelect(business.Id)" />
                                    </td>
                                    <td>@business.Name</td>
                                    <td>@business.LegalName</td>
                                    <td>@business.TaxNumber</td>
                                    <td>@business.VatNumber</td>
                                    <td>@business.City</td>
                                    <td>@business.Email</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="/admin/businesses/edit/@business.Id" class="btn btn-outline-primary"
                                                title="Редактировать">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button class="btn btn-outline-success" @onclick="() => CopyBusiness(business.Id)"
                                                title="Копировать бизнес">
                                                <i class="bi bi-files"></i>
                                            </button>
                                            <button class="btn btn-outline-danger" @onclick="() => DeleteBusiness(business.Id)"
                                                title="Удалить">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<BusinessDto> businesses = new();
    private bool isLoading = true;
    private string? errorMessage;
    private string? successMessage;
    private HashSet<int> selectedIds = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        errorMessage = null;
        selectedIds.Clear();

        try
        {
            var query = new GetAllBusinessesQuery();
            var result = await Mediator.Send(query);
            businesses = result.ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Ошибка загрузки бизнесов: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ToggleSelect(int id)
    {
        if (selectedIds.Contains(id))
            selectedIds.Remove(id);
        else
            selectedIds.Add(id);
    }

    private void ToggleSelectAll(ChangeEventArgs e)
    {
        if ((bool?)e.Value == true)
            selectedIds = businesses.Select(b => b.Id).ToHashSet();
        else
            selectedIds.Clear();
    }

    private async Task CopyBusiness(int sourceBusinessId)
    {
        var sourceBusiness = businesses.FirstOrDefault(b => b.Id == sourceBusinessId);
        if (sourceBusiness == null) return;

        var newName = await JSRuntime.InvokeAsync<string>("prompt",
        $"Введите название нового бизнеса (копия '{sourceBusiness.Name}'):",
        $"{sourceBusiness.Name} - Копия");

        if (string.IsNullOrWhiteSpace(newName))
            return;

        try
        {
            isLoading = true;
            successMessage = null;
            errorMessage = null;

            await using var context = await ContextFactory.CreateDbContextAsync();

            // Создаем новый бизнес
            var newBusiness = new Business
            {
                Name = newName,
                LegalName = sourceBusiness.LegalName,
                TaxNumber = sourceBusiness.TaxNumber,
                VatNumber = sourceBusiness.VatNumber,
                Address = sourceBusiness.Address,
                City = sourceBusiness.City,
                PostalCode = sourceBusiness.PostalCode,
                Country = sourceBusiness.Country,
                Phone = sourceBusiness.Phone,
                Email = sourceBusiness.Email,
                Website = sourceBusiness.Website,
                Logo = sourceBusiness.Logo,
                CreatedAt = DateTime.UtcNow,
                UpdatedAt = DateTime.UtcNow,
                IsDeleted = false
            };

            context.Businesses.Add(newBusiness);
            await context.SaveChangesAsync();

            // Копируем все справочники из исходного бизнеса
            await TemplateService.CopyReferenceDataAsync(sourceBusinessId, newBusiness.Id);

            successMessage = $"✅ Бизнес '{newName}' успешно создан с копированием всех справочников из '{sourceBusiness.Name}'";
            await LoadData();
        }
        catch (Exception ex)
        {
            errorMessage = $"Ошибка при копировании бизнеса: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DeleteSelected()
    {
        if (!selectedIds.Any()) return;

        if (!await JSRuntime.InvokeAsync<bool>("confirm", $"Вы уверены, что хотите удалить {selectedIds.Count} бизнесов?"))
            return;

        int deleted = 0;
        int errors = 0;

        foreach (var id in selectedIds.ToList())
        {
            try
            {
                var command = new DeleteBusinessCommand(id);
                var result = await Mediator.Send(command);
                if (result.IsSuccess)
                    deleted++;
                else
                    errors++;
            }
            catch
            {
                errors++;
            }
        }

        await JSRuntime.InvokeVoidAsync("alert", $"Удалено: {deleted}, Ошибок: {errors}");
        await LoadData();
    }

    private async Task DeleteBusiness(int id)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Вы уверены, что хотите удалить этот бизнес?"))
            return;

        try
        {
            var command = new DeleteBusinessCommand(id);
            var result = await Mediator.Send(command);

            if (result.IsSuccess)
            {
                await LoadData();
            }
            else
            {
                errorMessage = string.Join(", ", result.Errors);
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Ошибка при удалении бизнеса: {ex.Message}";
        }
    }
}
