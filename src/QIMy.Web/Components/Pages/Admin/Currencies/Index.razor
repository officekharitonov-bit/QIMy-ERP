    <h3>üí± Currencies (–í–∞–ª—é—Ç—ã)</h3>
    <div>
        @if (BusinessContext.CurrentBusinessId != 1)
        {
            <button class="btn btn-success me-2" @onclick="ShowTemplateSelector">
                <i class="bi bi-download"></i> –ò–∑ —à–∞–±–ª–æ–Ω–∞
            </button>
        }
        <a href="/admin/currencies/create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> –î–æ–±–∞–≤–∏—Ç—å Currency
        </a>
    </div>
</div>

@if (currencies == null)
{
    <p><em>–ó–∞–≥—Ä—É–∑–∫–∞...</em></p>
}
else if (!currencies.Any())
{
    <div class="alert alert-info">
        –í–∞–ª—é—Ç—ã –Ω–µ –Ω–∞–π–¥–µ–Ω—ã. –î–æ–±–∞–≤—å—Ç–µ –ø–µ—Ä–≤—É—é!
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Symbol</th>
                    <th>Exchange Rate</th>
                    <th>Default</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var currency in currencies)
                {
                    <tr>
                        <td><strong>@currency.Code</strong></td>
                        <td>@currency.Name</td>
                        <td>@currency.Symbol</td>
                        <td>@currency.ExchangeRate.ToString("F4")</td>
                        <td>
                            @if (currency.IsDefault)
                            {
                                <span class="badge bg-success">‚úì Default</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">-</span>
                            }
                        </td>
                        <td>
                            <a href="/admin/currencies/edit/@currency.Id" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i> –†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å
                            </a>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteCurrency(currency.Id)">
                                <i class="bi bi-trash"></i> –£–¥–∞–ª–∏—Ç—å
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<TemplateSelector T="Currency" @ref="templateSelector" Items="@availableTemplateItems"
    OnAddSelected="ImportFromTemplate" ColumnsDefinition="@currencyColumns" />

@code {
    private List<CurrencyDto>? currencies;

    private TemplateSelector<Currency>? templateSelector;
    private List<Currency> availableTemplateItems = new();
    private List<TemplateSelector<Currency>.ColumnDefinition<Currency>> currencyColumns = new()
{
new() { Header = "Code", ValueGetter = x => x.Code ?? "" },
new() { Header = "Name", ValueGetter = x => x.Name ?? "" },
new() { Header = "Symbol", ValueGetter = x => x.Symbol ?? "" },
new() { Header = "Rate", ValueGetter = x => x.ExchangeRate.ToString("F4") },
new() { Header = "Default", ValueGetter = x => x.IsDefault ? "‚úì" : "" }
};

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        var query = new GetAllCurrenciesQuery();
        var result = await Mediator.Send(query);
        currencies = result.OrderByDescending(x => x.IsDefault).ThenBy(x => x.Code).ToList();
    }

    private async Task DeleteCurrency(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", "–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ —É–¥–∞–ª–∏—Ç—å —ç—Ç—É –≤–∞–ª—é—Ç—É?"))
        {
            var command = new DeleteCurrencyCommand(id);
            var result = await Mediator.Send(command);

            if (result.IsSuccess)
            {
                await LoadData();
            }
            else
            {
                await JS.InvokeVoidAsync("alert", $"–û—à–∏–±–∫–∞: {result.Error}");
            }
        }
    }

    private async Task ShowTemplateSelector()
    {
        availableTemplateItems = await ImportService.GetAvailableCurrenciesAsync(BusinessContext.CurrentBusinessId ?? 0);
        if (templateSelector != null)
        {
            await templateSelector.Show();
        }
    }

    private async Task ImportFromTemplate(int[] selectedIds)
    {
        try
        {
            var result = await ImportService.AddCurrenciesFromTemplateAsync(BusinessContext.CurrentBusinessId ?? 0,
            selectedIds);
            await JS.InvokeVoidAsync("alert", $"–£—Å–ø–µ—à–Ω–æ –∏–º–ø–æ—Ä—Ç–∏—Ä–æ–≤–∞–Ω–æ {result} –≤–∞–ª—é—Ç –∏–∑ —à–∞–±–ª–æ–Ω–∞");
            await LoadData();
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"–û—à–∏–±–∫–∞ –∏–º–ø–æ—Ä—Ç–∞: {ex.Message}");
        }
    }
}
