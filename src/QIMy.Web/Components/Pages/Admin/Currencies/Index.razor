@page "/admin/currencies"
@using QIMy.Application.Currencies.DTOs
@using QIMy.Application.Currencies.Commands.DeleteCurrency
@using QIMy.Application.Currencies.Queries.GetAllCurrencies
@using MediatR
@using QIMy.Core.Entities
@using QIMy.Infrastructure.Services
@using QIMy.Web.Services
@using QIMy.Web.Components.Shared
@inject IMediator Mediator
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject BusinessContext BusinessContext
@inject TemplateImportService ImportService
@rendermode InteractiveServer

