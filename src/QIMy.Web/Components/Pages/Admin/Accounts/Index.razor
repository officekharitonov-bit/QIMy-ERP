                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<TemplateSelector T="Account" @ref="templateSelector" Items="@availableTemplateItems" OnAddSelected="ImportFromTemplate"
    ColumnsDefinition="@accountColumns" />

@code {
    private List<AccountDto> accounts = new();
    private bool isLoading = true;
    private string? errorMessage;

    private TemplateSelector<Account>? templateSelector;
    private List<Account> availableTemplateItems = new();
    private List<TemplateSelector<Account>.ColumnDefinition<Account>> accountColumns = new()
{
new() { Header = "Account Number", ValueGetter = x => x.AccountNumber ?? "" },
new() { Header = "Name", ValueGetter = x => x.Name ?? "" },
new() { Header = "Code", ValueGetter = x => x.AccountCode ?? "" }
};

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var query = new GetAllAccountsQuery();
            var result = await Mediator.Send(query);
            accounts = result.ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading accounts: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DeleteAccount(int id)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this account?"))
            return;

        try
        {
            var command = new DeleteAccountCommand(id);
            var result = await Mediator.Send(command);

            if (result.IsSuccess)
            {
                await LoadData();
            }
            else
            {
                errorMessage = string.Join(", ", result.Errors);
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting account: {ex.Message}";
        }
    }

    private bool confirm(string message)
    {
        return true;
    }

    private async Task ShowTemplateSelector()
    {
        availableTemplateItems = await ImportService.GetAvailableAccountsAsync(BusinessContext.CurrentBusinessId ?? 0);
        if (templateSelector != null)
        {
            await templateSelector.Show();
        }
    }

    private async Task ImportFromTemplate(int[] selectedIds)
    {
        try
        {
            var result = await ImportService.AddAccountsFromTemplateAsync(BusinessContext.CurrentBusinessId ?? 0,
            selectedIds);
            await JSRuntime.InvokeVoidAsync("alert", $"–£—Å–ø–µ—à–Ω–æ –∏–º–ø–æ—Ä—Ç–∏—Ä–æ–≤–∞–Ω–æ {result} —Å—á–µ—Ç–æ–≤ –∏–∑ —à–∞–±–ª–æ–Ω–∞");
            await LoadData();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"–û—à–∏–±–∫–∞ –∏–º–ø–æ—Ä—Ç–∞: {ex.Message}");
        }
    }
}
