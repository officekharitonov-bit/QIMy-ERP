@page "/admin/accounts/create"
@page "/admin/accounts/edit/{Id:int}"
@using MediatR
@using QIMy.Application.Accounts.Commands.CreateAccount
@using QIMy.Application.Accounts.Commands.UpdateAccount
@using QIMy.Application.Accounts.DTOs
@using QIMy.Application.Accounts.Queries.GetAccountById
@using QIMy.Application.TaxRates.Queries.GetAllTaxRates
@inject IMediator Mediator
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>@(Id > 0 ? "Edit Account" : "Create Account")</PageTitle>

<h3>@(Id > 0 ? "✏️ Редактировать Account" : "➕ Создать Account")</h3>

<div class="row">
    <div class="col-md-6">
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @errorMessage
                <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
            </div>
        }

        <EditForm Model="@model" OnValidSubmit="@HandleValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" />

            <div class="mb-3">
                <label class="form-label">Account Number:</label>
                <InputText @bind-Value="model.AccountNumber" class="form-control" placeholder="4000" />
            </div>

            <div class="mb-3">
                <label class="form-label">Name:</label>
                <InputText @bind-Value="model.Name" class="form-control" placeholder="Erlöse 20% USt" />
            </div>

            <div class="mb-3">
                <label class="form-label">Account Code:</label>
                <InputText @bind-Value="model.AccountCode" class="form-control" placeholder="1" />
                <small class="form-text text-muted">Код счета для группировки</small>
            </div>

            <div class="mb-3">
                <label class="form-label">Default Tax Rate:</label>
                <InputSelect @bind-Value="model.DefaultTaxRateId" class="form-select">
                    <option value="">-- Выберите налог --</option>
                    @foreach (var tax in taxRates)
                    {
                        <option value="@tax.Id">@tax.Name (@tax.IsActive%)</option>
                    }
                </InputSelect>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> @(Id > 0 ? "Сохранить" : "Создать")
                </button>
                <a href="/admin/accounts" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Отмена
                </a>
            </div>
        </EditForm>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private AccountModel model = new();
    private List<QIMy.Application.TaxRates.DTOs.TaxRateDto> taxRates = new();
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        // Load tax rates
        var taxRatesQuery = new GetAllTaxRatesQuery();
        var allTaxRates = await Mediator.Send(taxRatesQuery);
        taxRates = allTaxRates.ToList();

        // Load account if editing
        if (Id > 0)
        {
            var query = new GetAccountByIdQuery(Id);
            var account = await Mediator.Send(query);

            if (account != null)
            {
                model = new AccountModel
                {
                    AccountNumber = account.AccountNumber,
                    Name = account.Name,
                    AccountCode = account.AccountCode,
                    DefaultTaxRateId = account.DefaultTaxRateId?.ToString()
                };
            }
        }
    }

    private async Task HandleValidSubmit()
    {
        errorMessage = null;

        try
        {
            if (Id == 0)
            {
                var command = new CreateAccountCommand
                {
                    AccountNumber = model.AccountNumber,
                    Name = model.Name,
                    AccountCode = model.AccountCode,
                    DefaultTaxRateId = string.IsNullOrEmpty(model.DefaultTaxRateId) ? null : int.Parse(model.DefaultTaxRateId)
                };

                var result = await Mediator.Send(command);

                if (result.IsSuccess)
                {
                    Navigation.NavigateTo("/admin/accounts");
                }
                else
                {
                    errorMessage = string.Join(", ", result.Errors);
                }
            }
            else
            {
                var command = new UpdateAccountCommand
                {
                    Id = Id,
                    AccountNumber = model.AccountNumber,
                    Name = model.Name,
                    AccountCode = model.AccountCode,
                    DefaultTaxRateId = string.IsNullOrEmpty(model.DefaultTaxRateId) ? null : int.Parse(model.DefaultTaxRateId)
                };

                var result = await Mediator.Send(command);

                if (result.IsSuccess)
                {
                    Navigation.NavigateTo("/admin/accounts");
                }
                else
                {
                    errorMessage = string.Join(", ", result.Errors);
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving account: {ex.Message}";
        }
    }

    private class AccountModel
    {
        public string AccountNumber { get; set; } = string.Empty;
        public string Name { get; set; } = string.Empty;
        public string AccountCode { get; set; } = string.Empty;
        public string? DefaultTaxRateId { get; set; }
    }
}
