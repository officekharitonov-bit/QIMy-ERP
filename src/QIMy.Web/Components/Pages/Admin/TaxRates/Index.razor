        </table>
    </div>
}

<TemplateSelector T="TaxRate" @ref="templateSelector" Items="@availableTemplateItems" OnAddSelected="ImportFromTemplate"
    ColumnsDefinition="@taxRateColumns" />

@code {
    private List<TaxRateDto>? taxRates;
    private TemplateSelector<TaxRate>? templateSelector;
    private List<TaxRate> availableTemplateItems = new();

    private List<TemplateSelector<TaxRate>.ColumnDefinition<TaxRate>> taxRateColumns = new()
{
new() { Header = "Name", ValueGetter = x => x.Name ?? "" },
new() { Header = "Rate %", ValueGetter = x => x.Rate.ToString("0.0") },
new() { Header = "Active", ValueGetter = x => true ? "‚úì" : "" }
};

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        var query = new GetAllTaxRatesQuery();
        var result = await Mediator.Send(query);
        taxRates = result.OrderByDescending(x => x.Rate).ToList();
    }

    private async Task ShowTemplateSelector()
    {
        availableTemplateItems = await ImportService.GetAvailableTaxRatesAsync(BusinessContext.CurrentBusinessId ?? 0);
        if (templateSelector != null)
        {
            await templateSelector.Show();
        }
    }

    private async Task ImportFromTemplate(int[] selectedIds)
    {
        try
        {
            var result = await ImportService.AddTaxRatesFromTemplateAsync(BusinessContext.CurrentBusinessId ?? 0,
            selectedIds);
            await JS.InvokeVoidAsync("alert", $"–£—Å–ø–µ—à–Ω–æ –∏–º–ø–æ—Ä—Ç–∏—Ä–æ–≤–∞–Ω–æ {result} –Ω–∞–ª–æ–≥–æ–≤—ã—Ö —Å—Ç–∞–≤–æ–∫ –∏–∑ —à–∞–±–ª–æ–Ω–∞");
            await LoadData();
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"–û—à–∏–±–∫–∞ –∏–º–ø–æ—Ä—Ç–∞: {ex.Message}");
        }
    }

    private async Task DeleteTaxRate(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", "–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ —É–¥–∞–ª–∏—Ç—å —ç—Ç—É –Ω–∞–ª–æ–≥–æ–≤—É—é —Å—Ç–∞–≤–∫—É?"))
        {
            var command = new DeleteTaxRateCommand(id);
            var result = await Mediator.Send(command);

            if (result.IsSuccess)
            {
                await LoadData();
            }
            else
            {
                await JS.InvokeVoidAsync("alert", $"–û—à–∏–±–∫–∞: {result.Error}");
            }
        }
    }
}
