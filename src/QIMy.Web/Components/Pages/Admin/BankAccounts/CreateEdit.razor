@page "/admin/bank-accounts/edit/{Id:int}"
@using QIMy.Infrastructure.Data
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext DbContext
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>@(Id == 0 ? "Новый банковский счет" : "Редактирование счета")</PageTitle>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">@(Id == 0 ? "Новый банковский счет" : "Редактирование счета")</h3>
                </div>
                <div class="card-body">
                    <EditForm Model="@account" OnValidSubmit="@HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger" />

                        <div class="mb-3">
                            <label class="form-label">Предприятие *</label>
                            <InputSelect @bind-Value="account.BusinessId" class="form-select">
                                <option value="0">-- Выберите предприятие --</option>
                                @foreach (var business in businesses)
                                {
                                    <option value="@business.Id">@business.Name</option>
                                }
                            </InputSelect>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Название банка *</label>
                            <InputText @bind-Value="account.BankName" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">IBAN *</label>
                            <InputText @bind-Value="account.IBAN" class="form-control" placeholder="AT..." />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">BIC *</label>
                            <InputText @bind-Value="account.BIC" class="form-control" />
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Номер счета</label>
                                    <InputText @bind-Value="account.AccountNumber" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">BLZ (Bankleitzahl)</label>
                                    <InputText @bind-Value="account.BLZ" class="form-control" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Валюта по умолчанию</label>
                            <InputSelect @bind-Value="account.DefaultCurrencyId" class="form-select">
                                <option value="">-- Не выбрано --</option>
                                @foreach (var currency in currencies)
                                {
                                    <option value="@currency.Id">@currency.Code - @currency.Name</option>
                                }
                            </InputSelect>
                        </div>

                        <div class="mb-3 form-check">
                            <InputCheckbox @bind-Value="account.IsDefault" class="form-check-input" id="isDefault" />
                            <label class="form-check-label" for="isDefault">
                                Использовать по умолчанию
                            </label>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-secondary" @onclick="Cancel">
                                <i class="bi bi-x-circle"></i> Отмена
                            </button>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Сохранить
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private BankAccount account = new();
    private List<Business> businesses = new();
    private List<Currency> currencies = new();

    protected override async Task OnInitializedAsync()
    {
        // Load businesses
        businesses = await DbContext.Businesses
        .Where(b => !b.IsDeleted)
        .OrderBy(b => b.Name)
        .ToListAsync();

        // Load currencies
        currencies = await DbContext.Currencies
        .Where(c => !c.IsDeleted)
        .OrderBy(c => c.Code)
        .ToListAsync();

        if (Id > 0)
        {
            var existingAccount = await DbContext.BankAccounts.FindAsync(Id);
            if (existingAccount != null)
            {
                account = existingAccount;
            }
        }
    }

    private async Task HandleValidSubmit()
    {
        if (account.IsDefault)
        {
            // Remove IsDefault from all other accounts for this business
            var otherAccounts = await DbContext.BankAccounts
            .Where(b => b.BusinessId == account.BusinessId && b.Id != account.Id && !b.IsDeleted)
            .ToListAsync();

            foreach (var other in otherAccounts)
            {
                other.IsDefault = false;
                other.UpdatedAt = DateTime.UtcNow;
            }
        }

        if (Id == 0)
        {
            account.CreatedAt = DateTime.UtcNow;
            account.UpdatedAt = DateTime.UtcNow;
            DbContext.BankAccounts.Add(account);
        }
        else
        {
            account.UpdatedAt = DateTime.UtcNow;
            DbContext.BankAccounts.Update(account);
        }

        await DbContext.SaveChangesAsync();
        Navigation.NavigateTo("/admin/bank-accounts");
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/admin/bank-accounts");
    }
}
