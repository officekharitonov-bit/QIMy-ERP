@page "/admin/bank-accounts"
@using QIMy.Infrastructure.Data
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext DbContext
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Банковские счета</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Банковские счета</h2>
        <div>
            @if (selectedIds.Any())
            {
                <button class="btn btn-danger me-2" @onclick="DeleteSelected">
                    <i class="bi bi-trash"></i> Удалить выбранные (@selectedIds.Count)
                </button>
            }
            <a href="/admin/bank-accounts/edit/0" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Добавить счет
            </a>
            <a href="/admin/reference-data" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Назад
            </a>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Загрузка...</span>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th style="width: 50px;">
                                    <input type="checkbox" class="form-check-input" @onchange="ToggleSelectAll"
                                        checked="@(selectedIds.Any() && selectedIds.Count == bankAccounts.Count)" />
                                </th>
                                <th>Банк</th>
                                <th>IBAN</th>
                                <th>BIC</th>
                                <th>Предприятие</th>
                                <th>Валюта</th>
                                <th>По умолчанию</th>
                                <th style="width: 150px;">Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var account in bankAccounts)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" class="form-check-input"
                                            checked="@selectedIds.Contains(account.Id)"
                                            @onchange="() => ToggleSelect(account.Id)" />
                                    </td>
                                    <td>@account.BankName</td>
                                    <td>@account.IBAN</td>
                                    <td>@account.BIC</td>
                                    <td>@account.Business?.Name</td>
                                    <td>@account.DefaultCurrency?.Code</td>
                                    <td>
                                        @if (account.IsDefault)
                                        {
                                            <span class="badge bg-success">Да</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="/admin/bank-accounts/edit/@account.Id" class="btn btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button class="btn btn-outline-danger" @onclick="() => DeleteAccount(account.Id)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<BankAccount> bankAccounts = new();
    private bool isLoading = true;
    private HashSet<int> selectedIds = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        selectedIds.Clear();
        bankAccounts = await DbContext.BankAccounts
        .Include(b => b.Business)
        .Include(b => b.DefaultCurrency)
        .Where(b => !b.IsDeleted)
        .OrderByDescending(b => b.IsDefault)
        .ThenBy(b => b.BankName)
        .ToListAsync();
        isLoading = false;
    }

    private void ToggleSelect(int id)
    {
        if (selectedIds.Contains(id))
            selectedIds.Remove(id);
        else
            selectedIds.Add(id);
    }

    private void ToggleSelectAll(ChangeEventArgs e)
    {
        if ((bool?)e.Value == true)
            selectedIds = bankAccounts.Select(b => b.Id).ToHashSet();
        else
            selectedIds.Clear();
    }

    private async Task DeleteSelected()
    {
        if (!selectedIds.Any()) return;

        int deleted = 0;
        foreach (var id in selectedIds.ToList())
        {
            var account = await DbContext.BankAccounts.FindAsync(id);
            if (account != null)
            {
                account.IsDeleted = true;
                account.UpdatedAt = DateTime.UtcNow;
                deleted++;
            }
        }
        if (deleted > 0)
        {
            await DbContext.SaveChangesAsync();
            await LoadData();
        }
    }

    private async Task DeleteAccount(int id)
    {
        var account = await DbContext.BankAccounts.FindAsync(id);
        if (account != null)
        {
            account.IsDeleted = true;
            account.UpdatedAt = DateTime.UtcNow;
            await DbContext.SaveChangesAsync();
            await LoadData();
        }
    }
}
