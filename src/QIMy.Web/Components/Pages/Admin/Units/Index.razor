    </div>
</div>

@if (units == null)
{
    <p><em>–ó–∞–≥—Ä—É–∑–∫–∞...</em></p>
}
else if (!units.Any())
{
    <div class="alert alert-info">
        –ï–¥–∏–Ω–∏—Ü—ã –∏–∑–º–µ—Ä–µ–Ω–∏—è –Ω–µ –Ω–∞–π–¥–µ–Ω—ã. –î–æ–±–∞–≤—å—Ç–µ –ø–µ—Ä–≤—É—é!
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Short Name</th>
                    <th>Name</th>
                    <th>Default</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var unit in units)
                {
                    <tr>
                        <td><strong>@unit.ShortName</strong></td>
                        <td>@unit.Name</td>
