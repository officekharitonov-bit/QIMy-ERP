@page "/admin/units"
@using QIMy.Application.Units.DTOs
@using QIMy.Application.Units.Commands.DeleteUnit
@using QIMy.Application.Units.Queries.GetAllUnits
@using MediatR
@inject IMediator Mediator
@inject NavigationManager Navigation
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>Units</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>üìè Units (–ï–¥–∏–Ω–∏—Ü—ã –∏–∑–º–µ—Ä–µ–Ω–∏—è)</h3>
    <a href="/admin/units/create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> –î–æ–±–∞–≤–∏—Ç—å Unit
    </a>
</div>

@if (units == null)
{
    <p><em>–ó–∞–≥—Ä—É–∑–∫–∞...</em></p>
}
else if (!units.Any())
{
    <div class="alert alert-info">
        –ï–¥–∏–Ω–∏—Ü—ã –∏–∑–º–µ—Ä–µ–Ω–∏—è –Ω–µ –Ω–∞–π–¥–µ–Ω—ã. –î–æ–±–∞–≤—å—Ç–µ –ø–µ—Ä–≤—É—é!
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Short Name</th>
                    <th>Name</th>
                    <th>Default</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var unit in units)
                {
                    <tr>
                        <td><strong>@unit.ShortName</strong></td>
                        <td>@unit.Name</td>
                        <td>
                            @if (unit.IsDefault)
                            {
                                <span class="badge bg-success">‚úì Default</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">-</span>
                            }
                        </td>
                        <td>
                            <a href="/admin/units/edit/@unit.Id" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i> –†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å
                            </a>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteUnit(unit.Id)">
                                <i class="bi bi-trash"></i> –£–¥–∞–ª–∏—Ç—å
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<UnitDto>? units;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        var query = new GetAllUnitsQuery();
        var result = await Mediator.Send(query);
        units = result.OrderByDescending(x => x.IsDefault).ThenBy(x => x.Name).ToList();
    }

    private async Task DeleteUnit(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", "–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ —É–¥–∞–ª–∏—Ç—å —ç—Ç—É –µ–¥–∏–Ω–∏—Ü—É?"))
        {
            var command = new DeleteUnitCommand(id);
            var result = await Mediator.Send(command);

            if (result.IsSuccess)
            {
                await LoadData();
            }
            else
            {
                await JS.InvokeVoidAsync("alert", $"–û—à–∏–±–∫–∞: {result.Error}");
            }
        }
    }
}
