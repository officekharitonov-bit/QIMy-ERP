@page "/admin/units"
@using QIMy.Application.Units.DTOs
@using QIMy.Application.Units.Commands.DeleteUnit
@using QIMy.Application.Units.Queries.GetAllUnits
@using MediatR
@using QIMy.Core.Entities
@using QIMy.Infrastructure.Services
@using QIMy.Web.Services
@using QIMy.Web.Components.Shared
@using UnitEntity = QIMy.Core.Entities.Unit
@inject IMediator Mediator
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject BusinessContext BusinessContext
@inject TemplateImportService ImportService
@rendermode InteractiveServer

