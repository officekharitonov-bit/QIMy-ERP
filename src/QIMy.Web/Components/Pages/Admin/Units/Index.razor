                            <a href="/admin/units/edit/@unit.Id" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i> –†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å
                            </a>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteUnit(unit.Id)">
                                <i class="bi bi-trash"></i> –£–¥–∞–ª–∏—Ç—å
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<TemplateSelector T="UnitEntity" @ref="templateSelector" Items="@availableTemplateItems"
    OnAddSelected="ImportFromTemplate" ColumnsDefinition="@unitColumns" />

@code {
    private List<UnitDto>? units;

    private TemplateSelector<UnitEntity>? templateSelector;
    private List<UnitEntity> availableTemplateItems = new();
    private List<TemplateSelector<UnitEntity>.ColumnDefinition<UnitEntity>> unitColumns = new()
{
new() { Header = "Short Name", ValueGetter = x => x.ShortName ?? "" },
new() { Header = "Name", ValueGetter = x => x.Name ?? "" },
new() { Header = "Default", ValueGetter = x => x.IsDefault ? "‚úì" : "" }
};

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        var query = new GetAllUnitsQuery();
        var result = await Mediator.Send(query);
        units = result.OrderByDescending(x => x.IsDefault).ThenBy(x => x.Name).ToList();
    }

    private async Task DeleteUnit(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", "–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ —É–¥–∞–ª–∏—Ç—å —ç—Ç—É –µ–¥–∏–Ω–∏—Ü—É?"))
        {
            var command = new DeleteUnitCommand(id);
            var result = await Mediator.Send(command);

            if (result.IsSuccess)
            {
                await LoadData();
            }
            else
            {
                await JS.InvokeVoidAsync("alert", $"–û—à–∏–±–∫–∞: {result.Error}");
            }
        }
    }

    private async Task ShowTemplateSelector()
    {
        availableTemplateItems = await ImportService.GetAvailableUnitsAsync(BusinessContext.CurrentBusinessId ?? 0);
        if (templateSelector != null)
        {
            await templateSelector.Show();
        }
    }

    private async Task ImportFromTemplate(int[] selectedIds)
    {
        try
        {
            var result = await ImportService.AddUnitsFromTemplateAsync(BusinessContext.CurrentBusinessId ?? 0,
            selectedIds);
            await JS.InvokeVoidAsync("alert", $"–£—Å–ø–µ—à–Ω–æ –∏–º–ø–æ—Ä—Ç–∏—Ä–æ–≤–∞–Ω–æ {result} –µ–¥–∏–Ω–∏—Ü –∏–∑ —à–∞–±–ª–æ–Ω–∞");
            await LoadData();
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"–û—à–∏–±–∫–∞ –∏–º–ø–æ—Ä—Ç–∞: {ex.Message}");
        }
    }
}
