@page "/ar/invoices/create"
@page "/ar/invoices/edit/{Id:int}"
@using QIMy.Core.Entities
@using QIMy.Core.Enums
@using QIMy.Core.Interfaces
@using Microsoft.AspNetCore.Components.Forms
@using System.Globalization
@using QIMy.Infrastructure.Services
@using Microsoft.JSInterop
@inject IInvoiceService InvoiceService
@inject IClientService ClientService
@inject IProductService ProductService
@inject NavigationManager Navigation
@inject PdfInvoiceGeneratorService PdfGenerator
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>@(Id.HasValue ? "Редактировать" : "Создать") счёт - AR Module</PageTitle>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h3>
                <i class="bi bi-file-text"></i> 
                @(Id.HasValue ? "Редактировать счёт" : "Новый счёт")
            </h3>
        </div>
        <div class="col-auto">
            <a href="/ar/invoices" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Назад
            </a>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0">Информация о счёте</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Клиент *</label>
                            <select class="form-select" @bind="selectedClientId" disabled="@(Id.HasValue)">
                                <option value="0">Выберите клиента...</option>
                                @foreach (var client in clients)
                                {
                                    <option value="@client.Id">
                                        @client.CompanyName (@client.ClientCode)
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Дата счёта *</label>
                            <input type="date" class="form-control" @bind="invoiceDate" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Статус</label>
                            <select class="form-select" @bind="invoiceStatus">
                                <option value="@((int)InvoiceStatus.Draft)">Черновик</option>
                                <option value="@((int)InvoiceStatus.Sent)">Отправлен</option>
                                <option value="@((int)InvoiceStatus.Paid)">Оплачен</option>
                                <option value="@((int)InvoiceStatus.Cancelled)">Отменён</option>
                            </select>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Номер счёта</label>
                            <input type="text" class="form-control" @bind="invoiceNumber" 
                                   placeholder="Оставьте пустым для автогенерации" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Срок оплаты</label>
                            <input type="date" class="form-control" @bind="dueDate" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Позиции счёта <span class="badge bg-secondary">@items.Count</span></h5>
                    <div class="d-flex gap-2">
                        <button class="btn btn-sm btn-primary" @onclick="AddItem">
                            <i class="bi bi-plus"></i> Добавить позицию
                        </button>
                        <a class="btn btn-sm btn-outline-secondary" href="@downloadUrl" download="invoice-items.csv" title="Выгрузить позиции в CSV">
                            <i class="bi bi-download"></i> Экспорт (CSV)
                        </a>
                        <InputFile OnChange="HandleCsvUpload" accept=".csv,text/csv" class="form-control form-control-sm" />
                    </div>
                </div>
                <div class="card-body">
                    @if (!items.Any())
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Добавьте позиции в счёт
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th style="width: 40%">Услуга</th>
                                        <th style="width: 10%" class="text-end">Кол-во</th>
                                        <th style="width: 15%" class="text-end">Цена (Netto)</th>
                                        <th style="width: 10%" class="text-end">НДС %</th>
                                        <th style="width: 15%" class="text-end">Итого</th>
                                        <th style="width: 10%"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in items)
                                    {
                                        <tr>
                                            <td>
                                                <select class="form-select form-select-sm" 
                                                        @onchange="(ChangeEventArgs e) => SelectProduct(item, Convert.ToInt32(e.Value ?? 0))">
                                                    <option value="0">-- Выберите услугу --</option>
                                                    @foreach (var product in products)
                                                    {
                                                        <option value="@product.Id" 
                                                                selected="@(item.ProductId == product.Id)">
                                                            @product.Name @(string.IsNullOrEmpty(product.SKU) ? "" : $"({product.SKU})")
                                                        </option>
                                                    }
                                                </select>
                                                @if (string.IsNullOrEmpty(item.Description))
                                                {
                                                    <small class="text-muted d-block mt-1">Выберите из списка или напишите вручную</small>
                                                }
                                                <input type="text" class="form-control form-control-sm mt-1" 
                                                       @bind="item.Description" placeholder="Описание (опционально)" />
                                            </td>
                                            <td>
                                                <input type="number" class="form-control form-control-sm text-end" 
                                                       @bind="item.Quantity" step="0.01" />
                                            </td>
                                            <td>
                                                <input type="number" class="form-control form-control-sm text-end" 
                                                       @bind="item.UnitPrice" step="0.01" />
                                            </td>
                                            <td>
                                                <input type="number" class="form-control form-control-sm text-end" 
                                                       @bind="item.TaxRatePercent" step="0.01" />
                                            </td>
                                            <td class="text-end">
                                                <strong>@CalculateItemTotal(item).ToString("N2") €</strong>
                                            </td>
                                            <td class="text-center">
                                                <button class="btn btn-sm btn-outline-danger" @onclick="() => RemoveItem(item)">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0">Итоговая сумма</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Сумма (Netto):</span>
                        <strong>@subTotal.ToString("N2") €</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>НДС:</span>
                        <strong>@totalTax.ToString("N2") €</strong>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between">
                        <span class="h5">Итого (Brutto):</span>
                        <span class="h5 text-primary">@totalAmount.ToString("N2") €</span>
                    </div>
                </div>
            </div>

            <div class="d-grid gap-2">
                <button class="btn btn-primary btn-lg" @onclick="HandleSubmit" disabled="@isSaving">
                    @if (isSaving)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                    }
                    <i class="bi bi-save"></i> Сохранить счёт
                </button>

                @if (Id.HasValue && !isSaving)
                {
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-outline-info btn-sm" @onclick="ExportPdf" title="Скачать PDF">
                            <i class="bi bi-file-pdf"></i> PDF
                        </button>
                        <button type="button" class="btn btn-outline-info btn-sm" @onclick="ExportCsv" title="Скачать CSV">
                            <i class="bi bi-file-earmark-csv"></i> CSV
                        </button>
                    </div>
                }
                <a href="/ar/invoices" class="btn btn-outline-secondary">Отмена</a>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int? Id { get; set; }

    private List<Client> clients = new();
    private List<Product> products = new();
    private int selectedClientId = 0;
    private string invoiceNumber = string.Empty;
    private DateTime invoiceDate = DateTime.Today;
    private DateTime? dueDate = DateTime.Today.AddDays(30);
    private int invoiceStatus = (int)InvoiceStatus.Draft;
    private List<InvoiceItemModel> items = new();
    private string errorMessage = string.Empty;
    private bool isSaving = false;
    private string downloadUrl = string.Empty;

    private decimal subTotal => items.Sum(i => i.Quantity * i.UnitPrice);
    private decimal totalTax => items.Sum(i => CalculateItemTax(i));
    private decimal totalAmount => subTotal + totalTax;

    protected override async Task OnInitializedAsync()
    {
        clients = (await ClientService.GetAllClientsAsync()).ToList();
        products = (await ProductService.GetAllProductsAsync()).ToList();

        if (Id.HasValue)
        {
            var invoice = await InvoiceService.GetInvoiceByIdAsync(Id.Value);
            if (invoice != null)
            {
                selectedClientId = invoice.ClientId;
                invoiceNumber = invoice.InvoiceNumber;
                invoiceDate = invoice.InvoiceDate;
                dueDate = invoice.DueDate;
                invoiceStatus = (int)invoice.Status;

                items = invoice.Items.Select(i => new InvoiceItemModel
                {
                    Description = i.Description,
                    Quantity = i.Quantity,
                    UnitPrice = i.UnitPrice,
                    TaxRatePercent = 20
                }).ToList();
            }
        }
    }

    private void AddItem()
    {
        items.Add(new InvoiceItemModel
        {
            ProductId = 0,
            Description = string.Empty,
            Quantity = 1,
            UnitPrice = 0,
            TaxRatePercent = 20
        });
        BuildCsvDownloadUrl();
    }

    private void SelectProduct(InvoiceItemModel item, int productId)
    {
        if (productId <= 0)
        {
            item.ProductId = 0;
            return;
        }

        var product = products.FirstOrDefault(p => p.Id == productId);
        if (product != null)
        {
            item.ProductId = productId;
            item.Description = product.Name;
            item.UnitPrice = product.Price;
            
            // Set tax rate if product has one configured
            if (product.TaxRateId.HasValue && product.TaxRate != null)
            {
                item.TaxRatePercent = product.TaxRate.Rate;
            }
            
            BuildCsvDownloadUrl();
        }
    }

    private void RemoveItem(InvoiceItemModel item)
    {
        items.Remove(item);
        BuildCsvDownloadUrl();
    }

    private decimal CalculateItemTotal(InvoiceItemModel item)
    {
        var netto = item.Quantity * item.UnitPrice;
        var tax = netto * (item.TaxRatePercent / 100m);
        return netto + tax;
    }

    private decimal CalculateItemTax(InvoiceItemModel item)
    {
        return item.Quantity * item.UnitPrice * (item.TaxRatePercent / 100m);
    }

    private async Task HandleSubmit()
    {
        if (selectedClientId == 0)
        {
            errorMessage = "Выберите клиента";
            return;
        }

        if (!items.Any())
        {
            errorMessage = "Добавьте хотя бы одну позицию";
            return;
        }

        isSaving = true;
        errorMessage = string.Empty;

        try
        {
            var invoice = new Invoice
            {
                Id = Id ?? 0,
                ClientId = selectedClientId,
                InvoiceNumber = invoiceNumber,
                InvoiceDate = invoiceDate,
                DueDate = dueDate ?? invoiceDate.AddDays(30),
                Status = (InvoiceStatus)invoiceStatus,
                SubTotal = subTotal,
                TotalAmount = totalAmount,
                Items = items.Select(i => new InvoiceItem
                {
                    Description = i.Description,
                    Quantity = i.Quantity,
                    UnitPrice = i.UnitPrice,
                    TaxAmount = CalculateItemTax(i),
                    TotalAmount = CalculateItemTotal(i)
                }).ToList()
            };

            if (Id.HasValue)
            {
                await InvoiceService.UpdateInvoiceAsync(invoice);
            }
            else
            {
                await InvoiceService.CreateInvoiceAsync(invoice);
            }

            Navigation.NavigateTo("/ar/invoices");
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isSaving = false;
        }
    }

    private void BuildCsvDownloadUrl()
    {
        // Построить CSV из текущих позиций и подготовить data: URL для скачивания
        var sb = new System.Text.StringBuilder();
        sb.AppendLine("Description;Quantity;UnitPrice;TaxRatePercent");
        foreach (var it in items)
        {
            // Используем инвариантную культуру для чисел
            var qty = it.Quantity.ToString(CultureInfo.InvariantCulture);
            var price = it.UnitPrice.ToString(CultureInfo.InvariantCulture);
            var tax = it.TaxRatePercent.ToString(CultureInfo.InvariantCulture);
            // Экранируем точку с запятой в описании, заменяя на запятую
            var desc = (it.Description ?? string.Empty).Replace(";", ",");
            sb.AppendLine($"{desc};{qty};{price};{tax}");
        }
        var csv = sb.ToString();
        downloadUrl = "data:text/csv;charset=utf-8," + Uri.EscapeDataString(csv);
    }

    private async Task HandleCsvUpload(InputFileChangeEventArgs e)
    {
        try
        {
            var file = e.File;
            if (file == null) return;

            using var stream = file.OpenReadStream(maxAllowedSize: 2 * 1024 * 1024); // 2MB лимит
            using var reader = new StreamReader(stream);
            var content = await reader.ReadToEndAsync();

            if (string.IsNullOrWhiteSpace(content)) return;

            var lines = content.Replace("\r", string.Empty).Split('\n');
            var parsed = new List<InvoiceItemModel>();

            foreach (var raw in lines)
            {
                var line = raw.Trim();
                if (string.IsNullOrWhiteSpace(line)) continue;

                // Пропустить заголовок
                if (line.StartsWith("Description", StringComparison.OrdinalIgnoreCase) ||
                    line.StartsWith("Описание", StringComparison.OrdinalIgnoreCase))
                {
                    continue;
                }

                // Поддержать ; и , как разделители
                string[] parts;
                if (line.Contains(';')) parts = line.Split(';');
                else parts = line.Split(',');

                if (parts.Length < 4)
                {
                    // Минимум 4 столбца: Description;Quantity;UnitPrice;TaxRatePercent
                    continue;
                }

                var desc = parts[0].Trim();
                if (!TryParseDecimal(parts[1], out var qty)) qty = 0;
                if (!TryParseDecimal(parts[2], out var unitPrice)) unitPrice = 0;
                if (!TryParseDecimal(parts[3], out var taxRate)) taxRate = 20;

                parsed.Add(new InvoiceItemModel
                {
                    Description = desc,
                    Quantity = qty,
                    UnitPrice = unitPrice,
                    TaxRatePercent = taxRate
                });
            }

            if (parsed.Count > 0)
            {
                items = parsed;
                BuildCsvDownloadUrl();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Ошибка импорта CSV: {ex.Message}";
        }
    }

    private static bool TryParseDecimal(string? s, out decimal value)
    {
        // Пробуем точки/запятые в разных культурах
        if (decimal.TryParse(s, NumberStyles.Float, CultureInfo.InvariantCulture, out value)) return true;
        var ru = new CultureInfo("ru-RU");
        if (decimal.TryParse(s, NumberStyles.Float, ru, out value)) return true;
        var de = new CultureInfo("de-DE");
        if (decimal.TryParse(s, NumberStyles.Float, de, out value)) return true;
        return false;
    }

    private async Task ExportPdf()
    {
        if (!Id.HasValue)
        {
            errorMessage = "Сначала сохраните счёт";
            return;
        }

        try
        {
            var invoice = await InvoiceService.GetInvoiceByIdAsync(Id.Value);
            if (invoice == null)
            {
                errorMessage = "Счёт не найден";
                return;
            }

            var pdfBytes = PdfGenerator.GeneratePdf(invoice);
            var fileName = $"Invoice_{invoice.InvoiceNumber}_{DateTime.Now:yyyyMMdd_HHmmss}.pdf";
            await JS.InvokeVoidAsync("downloadFile", fileName, "application/pdf", Convert.ToBase64String(pdfBytes));
        }
        catch (Exception ex)
        {
            errorMessage = $"Ошибка при создании PDF: {ex.Message}";
        }
    }

    private async Task ExportCsv()
    {
        if (!Id.HasValue)
        {
            errorMessage = "Сначала сохраните счёт";
            return;
        }

        try
        {
            var csv = "Description;Quantity;UnitPrice;TaxRatePercent\n";
            foreach (var item in items)
            {
                csv += $"\"{item.Description}\";{item.Quantity:F2};{item.UnitPrice:F2};{item.TaxRatePercent:F1}\n";
            }

            var csvBytes = System.Text.Encoding.UTF8.GetBytes(csv);
            var fileName = $"Invoice_{invoiceNumber}_{DateTime.Now:yyyyMMdd_HHmmss}.csv";
            await JS.InvokeVoidAsync("downloadFile", fileName, "text/csv", Convert.ToBase64String(csvBytes));
        }
        catch (Exception ex)
        {
            errorMessage = $"Ошибка при экспорте CSV: {ex.Message}";
        }
    }

    private class InvoiceItemModel
    {
        public int ProductId { get; set; } = 0;
        public string Description { get; set; } = string.Empty;
        public decimal Quantity { get; set; }
        public decimal UnitPrice { get; set; }
        public decimal TaxRatePercent { get; set; }
    }
}
